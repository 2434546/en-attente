@model ForumDeDiscussion.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-transparent text-center">
                    <h2 class="fw-bold text-dark">Se connecter</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control rounded-pill" id="floatingEmail" placeholder="name@example.com">
                            <label for="floatingEmail">Adresse email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control rounded-pill" id="floatingPassword" placeholder="Mot de passe">
                            <label for="floatingPassword">Mot de passe</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">Se connecter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
